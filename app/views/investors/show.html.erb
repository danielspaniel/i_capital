<div class="max-w-4xl mx-auto p-6 bg-white rounded-lg shadow-md">
  <h2 class="text-3xl font-bold mb-4 text-gray-800 border-b pb-2">
    <%= @investor.full_name %>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
    <!-- Personal Details -->
    <div class="bg-gray-50 p-4 rounded-lg">
      <h3 class="text-xl font-semibold mb-3 text-gray-700">Personal Details</h3>
      <div class="space-y-2">
        <p><strong>First Name:</strong> <%= @investor.first_name %></p>
        <p><strong>Last Name:</strong> <%= @investor.last_name %></p>
        <p><strong>Date of Birth:</strong> <%= @investor.date_of_birth %></p>
        <p><strong>Phone Number:</strong> <%= @investor.phone_number %></p>
      </div>
    </div>

    <!-- Addresses -->
    <div class="bg-gray-50 p-4 rounded-lg">
      <h3 class="text-xl font-semibold mb-3 text-gray-700">Addresses</h3>
      <% if @investor.addresses.any? %>
        <% @investor.addresses.each do |address| %>
          <div class="space-y-1 mb-3">
            <p><strong>Street:</strong> <%= address.street %></p>
            <p><strong>State:</strong> <%= address.state %></p>
            <p><strong>Zip Code:</strong> <%= address.zip_code %></p>
          </div>
        <% end %>
      <% else %>
        <p class="text-gray-500">No addresses on file.</p>
      <% end %>
    </div>
  </div>

  <!-- Document Section -->
  <div class="mt-6 border-t pt-6">
    <h3 class="text-xl font-semibold mb-3 text-gray-700">Document</h3>
    <% if @investor.document.attached? %>
      <p>
        <%= link_to 'Download Document', rails_blob_path(@investor.document, disposition: 'attachment'),
                    class: 'inline-block bg-green-600 text-white font-semibold py-2 px-4 rounded hover:bg-green-700 transition' %>
      </p>
    <% else %>
      <p class="text-gray-500">No document uploaded.</p>
    <% end %>
  </div>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to '← Back to Investors', partner_investors_path(@partner),
                class: 'inline-block bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded hover:bg-gray-300 transition' %>
  </div>
</div> 